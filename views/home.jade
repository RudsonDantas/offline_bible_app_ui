extends layout

block content
  div.container
    div.row
      br
      br
      br
      br
      br
      div.col-md-12.col-sm-12.col-xs-12
      #gateway_language_bible
        .panel.panel-default
          // Default panel contents
          .panel-heading Bible List
          // Table
          table.table
            thead
              tr
                th Id
                th version
                th Code
                th Path
                th(colspan="3") Action
            tbody
              tr
                th 1
                td #{gateway_language_bible.bibleId}
                td #{gateway_language_bible.language}
                td #{gateway_language_bible.version}
                td.btn.btn-default.btn-sm show
                td.btn.btn-primary.btn-sm edit
                td.btn.btn-danger.btn-sm delete

    #myModal.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            h5.modal-title Import New Gateway Language Bible
          .modal-body
            form.form-horizontal(role='form')
              .form-group
                label.col-sm-3.control-label(for='bibleid') Bible Id
                .col-sm-9
                  input#bibleid.form-control(type='bibleid', placeholder='enter Bible id')
              .form-group
                label.col-sm-3.control-label(for='langcode') Language Code
                .col-sm-9
                  input#langcode.form-control(type='langcode', placeholder='enter language code')
              .form-group
                label.col-sm-3.control-label(for='version') Version
                .col-sm-9
                  input#version.form-control(type='version', placeholder='enter version')
              .form-group
                label.col-sm-3.control-label(for='inputFile') URL/File
                .col-sm-9
                  input#inputFile.form-control(type='inputFile', placeholder='enter path')
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Import
